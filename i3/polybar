high-alt = #0c2b41

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/main]
;monitor = ${env:MONITOR:eDP-1}
bottom = true
width = 100%
height = 20
offset-x = 0
offset-y = 0

;background = ${xrdb:color9}
background = ${colors.background}
foreground = ${colors.foreground}

